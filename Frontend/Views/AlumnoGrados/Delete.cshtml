@model Frontend.Models.AlumnoGrado

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<h3>¿Está seguro de querer eliminar esta asignacion?</h3>
<div>
    <h4>Asignacion</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Seccion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Seccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AlumnoNombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AlumnoNombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GradoNombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GradoNombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a class="btn btn-info" asp-action="Index">Regresar</a>
    </form>
</div>
